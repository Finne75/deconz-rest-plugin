{
  "schema": "devcap1.schema.json",
  "manufacturername": "$MF_LUMI",
  "modelid": "lumi.remote.b1acn01",
  "vendor": "Xiaomi Aqara",
  "product": "lumi.remote.b1acn01",
  "sleeper": true,
  "status": "Gold",
  "path": "/devices/lumi.remote.b1acn01.json",
  "subdevices": [
    {
      "type": "$TYPE_SWITCH",
      "restapi": "/sensors",
      "uuid": [
        "$address.ext",
        "0x01",
        "0x0012"
      ],
      "fingerprint": {
        "profile": "0x0104",
        "device": "0x0103",
        "endpoint": "0x01",
        "in": [
          "0x0000",
          "0x0012"
        ]
      },
      "items": [
        {
          "name": "attr/id"
        },
        {
          "name": "attr/lastannounced"
        },
        {
          "name": "attr/lastseen"
        },
        {
          "name": "attr/manufacturername"
        },
        {
          "name": "attr/mode",
          "description": "Operational mode.",
          "default": 1
        },
        {
          "name": "attr/modelid"
        },
        {
          "name": "attr/name"
        },
        {
          "name": "attr/swversion",
          "refresh.interval": 86400,
          "parse": {
            "at": "0x00f7",
            "ep": 1,
            "eval": "xiaomi_swversion.js",
            "fn": "xiaomi:special",
            "idx": "0x08"
          }
        },
        {
          "name": "attr/type"
        },
        {
          "name": "attr/uniqueid"
        },
        {
          "name": "config/battery",
          "awake": true,
          "parse": {
            "at": "0x00f7",
            "ep": 1,
            "eval": "xiaomi_battery.js",
            "fn": "xiaomi:special",
            "idx": "0x01"
          },
          "default": 0
        },
        {
          "name": "config/group",
          "default": "auto"
        },
        {
          "name": "config/on"
        },
        {
          "name": "config/reachable"
        },
        {
          "name": "state/buttonevent",
          "description": "The last received button event."
        },
        {
          "name": "state/lastupdated"
        }
      ]
    }
  ]
}
